{
    "compilerOptions": {
        "target": "es6",
        "out": ".tmp/di.ts",
        "outDir": ".tmp",
        "moduleResolution": "node",
        "isolatedModules": false,
        "jsx": "react",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": true,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true
    },
    "filesGlob": [
        "**/*.ts",
        "**/*.tsx",
        "!lib/**",
        "!bower_components/**",
        "!node_modules/**"
    ],
    "compileOnSave": false,
    "buildOnSave": false,
    "files": [
        "src/core/di.ts",
        "src/core/di/decorators.ts",
        "src/core/di/exceptions.ts",
        "src/core/di/forward_ref.ts",
        "src/core/di/injector.ts",
        "src/core/di/key.ts",
        "src/core/di/metadata.ts",
        "src/core/di/opaque_token.ts",
        "src/core/di/provider.ts",
        "src/core/di/type_info.ts",
        "src/core/di/type_literal.ts",
        "src/core/util/decorators.ts",
        "src/index.ts",
        "src/util/decorators.ts",
        "typings/tsd.d.ts"
    ],
    "atom": {
        "rewriteTsconfig": true
    }
}
